{
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "build",
            "isBuildCommand": true,
            "args": ["run", "build"],
            "problemMatcher": "$tsc",
            "showOutput": "silent"
        },
        {
            "taskName": "watch",
            "args": ["run", "build", "--",  "--watch"],
            "isWatching": true,
            "problemMatcher": "$tsc-watch",
            "showOutput": "silent"
        }
    ]
}
